<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionGroup="true"
    tools:ignore="UnusedAttribute"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test 1"
            android:id="@+id/mf_mmt_b_test1"
            style="?android:attr/buttonBarButtonStyle"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test 2"
            android:id="@+id/mf_mmt_b_test2"
            style="?android:attr/buttonBarButtonStyle"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test 3"
            android:id="@+id/mf_mmt_b_test3"
            style="?android:attr/buttonBarButtonStyle"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test 4"
            android:id="@+id/mf_mmt_b_test4"
            style="?android:attr/buttonBarButtonStyle"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test 5"
            android:id="@+id/mf_mmt_b_test5"
            style="?android:attr/buttonBarButtonStyle"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >

        <pl.mareklangiewicz.myviews.MyPie
            android:id="@+id/mf_mmt_mp1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:elevation="2dp"
            app:mv_pieColor="@android:color/holo_blue_dark"
            app:mv_ovalColor="@android:color/white"
            tools:ignore="UnusedAttribute"
            />

        <pl.mareklangiewicz.myviews.MyPie
            android:id="@+id/mf_mmt_mp2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:elevation="2dp"
            app:mv_pieColor="@android:color/holo_green_dark"
            app:mv_ovalColor="@android:color/white"
            tools:ignore="UnusedAttribute"
            />

        <pl.mareklangiewicz.myviews.MyPie
            android:id="@+id/mf_mmt_mp3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:elevation="2dp"
            app:mv_pieColor="@android:color/holo_red_dark"
            app:mv_ovalColor="@android:color/white"
            tools:ignore="UnusedAttribute"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mf_mmt_rv_log"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        app:layoutManager="LinearLayoutManager"
        android:layout_height="match_parent"
        />


</LinearLayout>